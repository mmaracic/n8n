  "tasks": [
    {
      "label": "npm install",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "npm install"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
