      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "default"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true,
        "echo": true
